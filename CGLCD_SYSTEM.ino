#include "ATM0130.h"

//ピンの割り当て (D/C , /RES)
ATM0130 myATM0130 = ATM0130(0, 2);

void setup() {
  //初期化
  Serial.begin(115200);
  myATM0130.begin();
}

void loop() {
  
  uint16_t block[8][8] = {
      {BLACK16,BLACK16,BLACK16,BLACK16,BLACK16,GREEN16,WHITE16,WHITE16},
      {WHITE16,WHITE16,WHITE16,WHITE16,BLACK16,GREEN16,WHITE16,WHITE16},
      {RED16,WHITE16,BLACK16,WHITE16,BLACK16,GREEN16,WHITE16,WHITE16},
      {GREEN16,WHITE16,WHITE16,WHITE16,BLACK16,GREEN16,WHITE16,WHITE16},
      {BLUE16,BLACK16,BLACK16,BLACK16,BLACK16,GREEN16,GREEN16,GREEN16},
      {YELLOW16,WHITE16,WHITE16,WHITE16,WHITE16,GREEN16,GREEN16,GREEN16},
      {CYAN16,WHITE16,WHITE16,WHITE16,WHITE16,GREEN16,GREEN16,GREEN16},
      {MAGENTA16, BLUE16, BLUE16, BLUE16, BLUE16, GREEN16,GREEN16,GREEN16},
    };
  myATM0130.clearScreen(GREEN16);
  myATM0130.updateBlock_8px(0,0,block);
  myATM0130.updateBlock_8px(8,8,block);
  myATM0130.updateScreen();
  myATM0130.print("test");
}
